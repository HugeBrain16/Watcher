<!-- PDA version of the CRC gui by Amon -->
<w>
    <main_wnd x="0" y="0" width="1024" height="768" update_delay="2900"/>

	<frame1 x="28" y="41" width="764" height="90" stretch="1">
        <texture>ui_inGame2_pda_buttons_background</texture>
	</frame1>

	<frame2 x="28" y="137" width="764" height="571" stretch="1">
		<texture>ui_inGame2_pda_buttons_background</texture>
	</frame2>	

	<messages x="36" y="157" width="758" height="499" item_height="50" always_show_scroll="1" inverse_dir="0">
		<font font="letterica18" color="ui_4"/>
	</messages>

	<message x="0" y="0" width="748" height="50">
		<date_static x="44" y="11" width="80" height="14">
			<text align="l" font="letterica16" color="ui_3"/>
		</date_static>
		<caption_static x="124" y="11" width="441" height="14">
			<text align="l" font="letterica16" color="ui_1"/>
		</caption_static>
		<text_static x="44" y="26" width="517" height="14" complex_mode="1">
			<text align="l" font="letterica16" color="ui_4"/>
		</text_static>
		<image x="0" y="12" width="39" height="29" stretch="1"/>
	</message> 

	<edit_box x="36" y="676" width="669" height="27" frame_mode="0" stretch="1">
		<texture>ui_crc_textbox</texture>
		<text x="-490" y="2" align="l" vert_align="c" font="letterica18"></text>
	</edit_box>

	<button_send x="685" y="675" width="100" height="27" frame_mode="0" stretch="1">
		<texture>ui_crc_button</texture>
		<text font="letterica18" align="c">crc_send</text>
	</button_send>
 
	<connection_lost x="0" y="0" width="800" height="800" stretch="1">
		<texture>ui\crc_log_background</texture>
		<text y="100" font="graffiti22" color="pda_red" vert_align="c" align="c">crc_signallost</text>
	</connection_lost>

	<sort_by_date x="36" y="94" width="30" height="30">
        <texture>ui_inGame2_checkbox</texture>
		<text x="-60" y="2" font="letterica16" r="170" g="170" b="170" align="l">crc_sort_by_date</text>
	</sort_by_date>

	<use_cyrillic x="180" y="94" width="30" height="30">
        <texture>ui_inGame2_checkbox</texture>
		<text x="-60" y="2" font="letterica16" r="170" g="170" b="170" align="l">crc_use_cyrillic</text>
	</use_cyrillic>	

	<current_channel x="600" y="94" width="30" height="30">
		<text align="l" vert_align="c" font="letterica18" color="ui_1"/>
	</current_channel>

	<reconnect_button x="510" y="94" width="85" height="30">
		<texture>ui_inGame2_button</texture>
		<text align="c" font="letterica18">watcher_reconnect_button</text>
	</reconnect_button>
</w>